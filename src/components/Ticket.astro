---
import Popular from "./Popular.astro";
---
<section>
 <div class="card">
     <div class="bg"></div>
     <div class="content">
           
            <h1>20-21 <br> MARCH <br> 2024</h1>
             <Popular/>
            <h2>ONLINE TICKET</h2>
            <img src="public/location.png" alt="">
            <h3>COPENHAGEN</h3>
            <p></p>
        </div>
    </div>
    </section>


    <style>
    .card {
        width: 300px;
        position: relative;
        background: #2E3C69;
        border-radius: 20px;
        margin: 5%;
    }
    
    
    .bg {
        position: absolute;
        margin-top: -3px;
        margin-left: -3px;
        height: calc(100% + 6px);
        width: calc(100% + 6px);
        z-index: -1;
        background: linear-gradient(90deg, #2E3C69, #2E3C69, #D22D57, #D22D57);
        animation: anim 8s linear infinite;
        border-radius: 25px;
        background-size: 400%;
    }
    
    .content {
        overflow: hidden;
        background: #F9EFE9;
        padding: 1rem;
        height: 450px;
        border-radius: 25px;

    }
    h2{
        text-align: center;
        margin-top: 20%;
    }
    h3{
        text-align: center;
        margin-top: 5%;
    }
    img{
        width: 10%;
        margin-left: 43%;
        margin-top: 10%;
    }

    @keyframes anim {
        from {
            background-position: 0
        }

        to {
            background-position: 400%
        }
    }
</style>