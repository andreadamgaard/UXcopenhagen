---
import Button from "../components/Button.astro"
const h2 = Astro.props.h2;
---
<section>
 <div class="card">
     <div class="bg"></div>
     <div class="content">
           
            <h1>20-21 <br> MARCH <br> 2024</h1>
             <slot />
            <h2>{h2}</h2>
            <img src="/location.png" alt="Location">
            <h3>COPENHAGEN</h3>
            <div class="button">
            <Button variant="secondary" size="medium">BUY TICKETS</Button>
            </div>
        </div>
    </div>
    </section>


    <style>
        /* animated border is inspired by codepen */
    .card {
        width: 300px;
        position: relative;
        background: #2E3C69;
        border-radius: 20px;
        margin: 5%;
    }
    
    
    .bg {
        position: absolute;
        margin-top: -3px;
        margin-left: -3px;
        height: calc(100% + 6px);
        width: calc(100% + 6px);
        z-index: -1;
        background: linear-gradient(90deg, #2E3C69, #2E3C69, #D22D57, #D22D57);
        animation: anim 8s linear infinite;
        border-radius: 25px;
        background-size: 400%;
    }
    
    .content {
        overflow: hidden;
        background: #F9EFE9;
        padding: 1rem;
        height: 450px;
        border-radius: 25px;

    }
    h2{
        text-align: center;
        margin-top: 20%;
    }
    h3{
        text-align: center;
        margin-top: 5%;
    }
    img{
        width: 10%;
        margin-left: 43%;
        margin-top: 10%;
    }

    .button{
        display: flex;
        justify-content: center;
    }
    @keyframes anim {
        from {
            background-position: 0
        }

        to {
            background-position: 400%
        }
    }
</style>