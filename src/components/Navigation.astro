<header>
<div class="logo">
	<a href="/">
		<img src="/logo/logo_ux.svg" alt="logo">
    </a>
    </div>
	<div>
  <nav class="navigation">
		<ul class="menu">
			<li><a href="#">Tickets</a></li>
			<li><a href="/speakers">Speakers</a></li>
			<li><a href="#">About</a></li>
			<li><a href="#">Previous Years</a></li>
		</ul>
		<div class="burger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
    </div>
  </nav>
</div>
</header>

<style>

@media (max-width: 900px) {
  .menu {
    display: none;
  }
  .burger {
    display: block;
  }

  /*rotere top streg, i aktiv burger menu*/
  .burger.active .line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  /*skjuler midter streg, i aktiv burger menu*/
  .burger.active .line:nth-child(2) {
    opacity: 0;
  }

  /*rotere bund streg, i aktiv burger menu*/
  .burger.active .line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  nav.active .menu {
    display: block;
    background-color: var(--header);
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
  }

  nav.active .menu li {
    margin: 10px 20px;
  }

  nav.active .menu a {
    font-size: 24px;
  }
  .logo img {
    height: 70px;
  }
} 
header{
    background-color: var(--header);
    display: flex;
    justify-content: space-between;
    padding: 0;
    width: 100%;
}

nav{

}

.menu{ 
    padding-top: 1.5rem;
    padding-right: 2rem;
}

ul {
    margin-bottom: auto;
    display: flex;
    justify-content: space-between;
    gap: 3rem;
    align-items: center;
}

li {
    display: flex;
}

.burger {
  width: 30px;
  height: 20px;
  cursor: pointer;
}

.burger .line {
  width: 100%;
  height: 2px;
  background-color: var(--ticket_text);
  margin-bottom: 5px;
}
.burger {
  display: none;
}

.logo{
    padding-left: 1rem;
}

.logo img {
    width: 70px;
    height: 70px;
}

a{
    font-size: 1.2rem;
}

a:hover {
  color: var(--secondary);
}
</style>
